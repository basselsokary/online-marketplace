@using Application.Features.Orders.Queries.Get.GetForAdmin
@using Domain.Enums
@model List<GetOrdersForAdminQueryResponse>

@{
    ViewBag.Title = "Admin - Order Management";
}

<div class="container-fluid">
    <h2>Order Management Dashboard</h2>
    
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }

    <!-- Orders Table -->
    <div class="card">
        <div class="card-body">
            @if (Model?.Any() ?? false)
            {
                <table class="table table-striped table-hover">
                    <thead class="thead-dark">
                        <tr>
                            <th>Order ID</th>
                            <th>Customer ID</th>
                            <th>Date</th>
                            <th>Amount</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in Model)
                        {
                            <tr>
                                <td><strong>@order.Id</strong></td>
                                <td>@order.CustomerId</td>
                                <td>@order.CreatedAt.ToString("MM/dd/yyyy")</td>
                                <td>@order.TotalAmount.Amount.ToString("C")</td>
                                <td>
                                    @order.Status
                                </td>
                                <td>
                                    @Html.ActionLink("Details", "OrderDetails", new { orderId = order.Id }, new { @class = "btn btn-info btn-sm" })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                
                <!-- Pagination -->
                @* @if (Model.TotalOrders > Model.PageSize)
                {
                    <nav aria-label="Page navigation">
                        <ul class="pagination justify-content-center">
                            @for (int i = 1; i <= Math.Ceiling((double)Model.TotalOrders / Model.PageSize); i++)
                            {
                                <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                                    @Html.ActionLink(i.ToString(), "Orders", 
                                        new { searchTerm = Model.SearchTerm, statusFilter = Model.StatusFilter, page = i }, 
                                        new { @class = "page-link" })
                                </li>
                            }
                        </ul>
                    </nav>
                } *@
            }
            else
            {
                <div class="alert alert-info">
                    <h4>No Orders Found</h4>
                    <p>No orders match your current filter criteria.</p>
                </div>
            }
        </div>
    </div>
</div>

