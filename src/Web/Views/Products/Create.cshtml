@model Web.Models.Products.CreateProductViewModel
@{
    ViewData["Title"] = "Create Product";
}

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title mb-0">
                    <i class="fas fa-plus me-2 text-primary"></i>Create New Product
                </h3>
            </div>
            
            <div class="card-body">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Home</a></li>
                        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Products")">Products</a></li>
                        <li class="breadcrumb-item active">Create</li>
                    </ol>
                </nav>

                <form asp-action="Create" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                    
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label">Product Name *</label>
                        <input asp-for="Name" class="form-control" placeholder="Enter product name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="PriceAmount" class="form-label">Price Amount *</label>
                                <div class="input-group">
                                    <span class="input-group-text">$</span>
                                    <input asp-for="PriceAmount" class="form-control" placeholder="0.00" />
                                </div>
                                <span asp-validation-for="PriceAmount" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="PriceCurrency" class="form-label">Currency *</label>
                                <div class="input-group">
                                    <input asp-for="PriceCurrency" class="form-control" placeholder="USD" />
                                </div>
                                <span asp-validation-for="PriceCurrency" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="SelectedCategoryIds" class="form-label">Category *</label>
                        <select asp-for="SelectedCategoryIds" asp-items="ViewBag.CategoryList" class="form-control" multiple="multiple"></select>
                        <span asp-validation-for="SelectedCategoryIds" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Description" class="form-label">Description</label>
                        <textarea asp-for="Description" class="form-control" rows="4" 
                                  placeholder="Enter product description..."></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="StockQuantity" class="form-label">Stock Quantity *</label>
                                <input asp-for="StockQuantity" type="number" class="form-control" min="0" />
                                <span asp-validation-for="StockQuantity" class="text-danger"></span>
                            </div>
                        </div>
                        
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Product Image Url</label>
                                <input asp-for="ImageUrl" class="form-control" placeholder="Enter product image URL" />
                                <span asp-validation-for="ImageUrl" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-times me-2"></i>Cancel
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-2"></i>Create Product
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
